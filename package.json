{
  "name": "@ayato-san/tailwind-plugin",
  "type": "module",
  "version": "0.0.0",
  "description": "My custom tailwind plugin",
  "author": "Ayato-san <ayatosan.pro@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Ayato-san/tailwind-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ayato-san/tailwind-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/Ayato-san/tailwind-plugin/issues"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "css",
    "plugin"
  ],
  "exports": {},
  "files": [],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run format && npm run lint:fix",
    "build": "tsup",
    "postbuild": "rm -r ./build/deleted && find ./build -name '*.cts' -type f -delete",
    "prepublishOnly": "npm run build",
    "release": "npx release-it"
  },
  "devDependencies": {
    "@ayato-san/tooling-configs": "^1.0.0",
    "@types/node": "^20.14.8",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "release-it": "^17.4.0",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "prettier": "@ayato-san/tooling-configs/prettier",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
